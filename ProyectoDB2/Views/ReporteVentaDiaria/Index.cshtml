@{
    ViewData["Title"] = "Crear Producto";
}
<head>
    <title>Reporte de Ventas Diarias</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 20px;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center; /* Alineación central del contenido */
        }

        h2 {
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            text-align: center; /* Alineación central para los controles */
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-size: 18px;
            text-align: center; /* Alineación central del texto */
        }

        input[type="date"], select, input[type="text"], button {
            padding: 15px;
            margin-bottom: 10px;
            border: 2px solid #ccc; /* Aumento del grosor del borde */
            border-radius: 8px;
            box-sizing: border-box;
            width: calc(100% - 4px); /* Ancho completo del contenedor, ajustando el borde */
            font-size: 18px;
            text-align: center; /* Alineación central del texto dentro del input */
        }

        select {
            width: 100%; /* Ancho completo para el select */
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #45a049;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Reporte de Ventas Diarias</h2>
        <form id="formReporte">
            <label for="fechaInicio">Fecha de Inicio:</label>
            <input type="date" id="fechaInicio" name="fechaInicio" required>

            <label for="fechaFin">Fecha Fin:</label>
            <input type="date" id="fechaFin" name="fechaFin" required>

            <label for="tipoProducto">Tipo de Producto:</label>
            <select class="form-control" id="tipoProducto" name="tipoProducto">
                <option value="">Seleccione un tipo de producto</option>
                @foreach (var item in ViewBag.TiposProductos)
                {
                    <option value="@item.Id">@item.Nombre</option>
                }
                <!-- Agregar más opciones según los tipos disponibles -->
            </select>


            <button href="@Url.Action("Details", "ReporteVentaDiaria", new { id = })" type="submit">Generar Reporte</button>
        </form>
        <br>
        <div id="reporte">
            <!-- Aquí se mostrarán los resultados -->
        </div>
    </div>

    <script>
        document.getElementById('formReporte').addEventListener('submit', function (event) {
            event.preventDefault();

            var fechaInicio = document.getElementById('fechaInicio').value;
            var fechaFin = document.getElementById('fechaFin').value;
            var tipoProducto = document.getElementById('tipoProducto').value;
          

            // Realizar la solicitud AJAX para obtener los datos del servidor
            var xhr = new XMLHttpRequest();
            var url = 'mostrar_reporte_ventas_diarias.php'; // Ruta al archivo PHP que manejará la consulta al procedimiento almacenado
            var params = 'fechaInicio=' + fechaInicio + '&fechaFin=' + fechaFin + '&tipo=' + tipoProducto;

           

            xhr.open('GET', url + '?' + params, true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    var data = JSON.parse(xhr.responseText);
                    mostrarTabla(data);
                }
            };
            xhr.send();
        });

        function mostrarTabla(data) {
            var tabla = "<table><tr><th>Fecha de Compra</th><th>Tipo de Producto</th><th>Nombre del Producto</th><th>Ciudad</th><th>Cantidad</th><th>Costo Unitario</th><th>Subtotal</th></tr>";

            data.forEach(function (item) {
                tabla += "<tr>";
                tabla += "<td>" + item.FechaCompra + "</td>";
                tabla += "<td>" + item.TipoProducto + "</td>";
                tabla += "<td>" + item.NombreProducto + "</td>";
                tabla += "<td>" + (item.Ciudad ? item.Ciudad : 'N/A') + "</td>";
                tabla += "<td>" + item.Cantidad + "</td>";
                tabla += "<td>" + item.CostoUnitario + "</td>";
                tabla += "<td>" + item.SubTotal + "</td>";
                tabla += "</tr>";
            });

            tabla += "</table>";

            document.getElementById("reporte").innerHTML = tabla;
        }
    </script>
</body>

