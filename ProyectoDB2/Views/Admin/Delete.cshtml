@model ProyectoDB2.Models.AdminModel

@{
    ViewBag.Title = "Delete Admin";
}

<h1>Eliminar usuario</h1>

<h3>¿Estas seguro de eliminar este usuario?</h3>
<div>
    <h4>Administración de usuario</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>No.</dt>
        <dd>@Model.Id</dd>
        <dt>Nombre</dt>
        <dd>@Model.Name</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>

<br />
<div class="form-group">
    <form action="@Url.Action("Index")" method="get">
        <button type="submit" class="btn btn-success">Regresar a la lista</button>
    </form>
</div>
