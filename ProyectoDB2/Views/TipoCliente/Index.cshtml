@using ProyectoDB2.DTOs
@model IEnumerable<TipoClienteDTO>

@{
	ViewData["Title"] = "Tipos de Cliente";
}

<div class="d-flex justify-content-between align-items-center my-3">
	<h1>Tipos de Clientes</h1>

	<button onclick="location.href='@Url.Action("Create", "TipoCliente")'" class="btn btn-primary">
		Crear Tipos de Cliente
	</button>
</div>

<table class="table table-bordered table-striped">
	<thead class="thead-dark">
		<tr>
			<th>Id</th>
			<th>Nombre</th>
		</tr>
	</thead>
	<tbody id="productTableBody">
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Nombre</td>
				<td>
					@* Link a eliminar *@
					<a href="@Url.Action("Delete", "TipoCliente", new { id = item.Id })" class="btn btn-danger">
						Eliminar
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
