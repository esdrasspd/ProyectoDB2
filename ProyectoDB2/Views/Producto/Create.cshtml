@using ProyectoDB2.Entityes
@model Producto

@{
	ViewData["Title"] = "Crear Producto";
}

<h1>Creacion</h1>

<div class="modal-content">
	<div class="modal-header">
		<h5 class="modal-title" id="productModalLabel">Agregar/Editar Producto</h5>
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="modal-body">
		<form asp-action="Create" method="post">
			<input type="hidden" id="productReference">
			<div class="form-group">
				<label asp-for="Referencia">Referencia</label>
				<input asp-for="Referencia" type="text" class="form-control">
			</div>
			<div class="form-group">
				<label asp-for="Nombre">Nombre</label>
				<input asp-for="Nombre" type="text" class="form-control">
			</div>
			<div class="form-group">
				<label asp-for="Descripcion">Descripción</label>
				<input type="text" class="form-control" asp-for="Descripcion">
			</div>
			<div class="form-group">
				<label asp-for="IdTipoProducto">Tipo de Producto</label>
				@if (ViewBag.TiposProductos != null)
				{
					<select class="form-control" asp-for="IdTipoProducto">
						<option value="">Seleccione un tipo de producto</option>
						@foreach (var item in ViewBag.TiposProductos)
						{
							<option value="@item.Id">@item.Nombre</option>
						}
					</select>
				}

			</div>
			<div class="form-group">
				<label asp-for="Material">Material</label>
				<input type="text" class="form-control" asp-for="Material">
			</div>
			<div class="form-group">
				<label>Dimensiones (Alto x Ancho x Profundidad)</label>
				<div class="form-row">
					<div class="col">
						<input type="number" step="0.01" class="form-control" asp-for="Alto" placeholder="Alto">
					</div>
					<div class="col">
						<input type="number" step="0.01" class="form-control" asp-for="Ancho" placeholder="Ancho">
					</div>
					<div class="col">
						<input type="number" step="0.01" class="form-control" asp-for="Profundidad" placeholder="Profundidad">
					</div>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Color">Color</label>
				<input type="text" class="form-control" asp-for="Color">
			</div>
			<div class="form-group">
				<label asp-for="Peso">Peso</label>
				<input type="number" class="form-control" asp-for="Peso">
			</div>
			<button type="submit" class="btn btn-primary">Guardar</button>
		</form>
	</div>
</div>